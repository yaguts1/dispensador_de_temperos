# ========================================
# YAGUTS DISPENSER - Configuração de Produção
# ========================================
# Copie de .env.example e customize

# ----- SEGURANÇA -----
# Chave secreta para assinar JWT tokens e sessions
# IMPORTANTE: Gere uma chave forte com: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=sua-chave-secreta-super-segura-de-32-caracteres-aqui

# ----- COOKIES (Autenticação) -----
# Domínio da aplicação para os cookies de autenticação
COOKIE_DOMAIN=api.yaguts.com.br

# Se True, cookies só são enviados via HTTPS (obrigatório em produção)
COOKIE_SECURE=True

# ----- DATABASE -----
# Path do banco SQLite (relativo ao backend/)
DATABASE_URL=sqlite:///./dispenser.db

# ----- SERVIDOR -----
# Host para o uvicorn ouvir
# 0.0.0.0 = escuta em todas as interfaces
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# ----- FRONTEND -----
# URL onde o frontend está hospedado (usado para CORS)
FRONTEND_URL=https://yaguts.com.br

# ----- MODO DEBUG -----
# Em produção, sempre mantenha False
DEBUG=False

# ----- LOGS -----
# Nível de log: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ----- CORS -----
# URLs permitidas para CORS (separadas por vírgula)
ALLOWED_ORIGINS=https://yaguts.com.br,https://www.yaguts.com.br,https://api.yaguts.com.br

# ----- JWT -----
# Tempo de expiração do token JWT em minutos
JWT_EXPIRATION_MINUTES=1440

# ----- DEVICE POLLING -----
# Intervalo de polling dos devices em segundos
DEVICE_POLLING_INTERVAL=5

# Timeout para considerar device offline (segundos)
DEVICE_OFFLINE_TIMEOUT=90
